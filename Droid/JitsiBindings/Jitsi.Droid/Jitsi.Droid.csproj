<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFramework>monoandroid90</TargetFramework>
    
    <AssemblyName>Jitsi.Droid</AssemblyName>
    <RootNamespace>Jitsi.Droid</RootNamespace>
    <Description>Binding library of https://github.com/jitsi/jitsi-meet</Description>
    <PackageId>Nivaes.Jitsi.Droid</PackageId>
    <PackageTags>xamarin;android;monodroid;jitsi</PackageTags>
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>

    <Version>2.13.0.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <IsBindingProject>true</IsBindingProject>
    <OutputType>Library</OutputType>
    <AndroidUseLatestPlatformSdk>false</AndroidUseLatestPlatformSdk>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
    <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidUseManagedDesignTimeResourceGenerator>False</AndroidUseManagedDesignTimeResourceGenerator>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="Resources\**\*.cs" />
    <Compile Remove="Resources\**\*.cs" />
    <AndroidResource Include="Resources\**\*.xml" Generator="MSBuild:UpdateAndroidResources" />
    <LibraryProjectZip Include="Jars\*.aar" />
    <EmbeddedJar Include="Jars\Embedded\*.jar" />
    
    
    <!--<InputJar Include="Jars\Reference\*.jar" />-->
    <ReferenceJar Include="Jars\Reference\*.jar" />
    <!--<EmbeddedReferenceJar Include="Jars\Reference\*.jar" />-->
    <TransformFile Include="Transforms\*.xml" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Jars\Reference\" />
  </ItemGroup>

  <!--<ItemGroup>
    <PackageReference Include="Naxam.Jakewharton.Timber" Version="4.7.1" />
    <PackageReference Include="Xamarin.AndroidX.AppCompat" Version="1.1.0.1" />
    <PackageReference Include="Naxam.SoLoader.Droid" Version="0.6.1.2" />
  </ItemGroup>-->

</Project>
