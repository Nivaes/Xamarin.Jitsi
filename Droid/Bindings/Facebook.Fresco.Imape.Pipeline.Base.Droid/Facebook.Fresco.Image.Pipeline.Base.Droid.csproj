<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>monoandroid90;monoandroid10.0</TargetFrameworks>
    
    <AssemblyName>Facebook.Fresco.Image.Pipeline.Base.Droid</AssemblyName>
    <RootNamespace>Facebook.Fresco.Image.Pipeline.Base.Droid</RootNamespace>
    <Description>Binding library of https://github.com/facebook/fresco</Description>
    <PackageId>Nivaes.Facebook.Fresco.Image.Pipeline.Droid</PackageId>
    <PackageTags>xamarin;android;monodroid;facebook;Fresco;image:pipeline</PackageTags>
    <GeneratePackageOnBuild Condition="'$(Configuration)' == 'Release'">true</GeneratePackageOnBuild>

    <Version>2.0.0.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <IsBindingProject>true</IsBindingProject>
    <OutputType>Library</OutputType>
    <AndroidClassParser>class-parse</AndroidClassParser>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidUseManagedDesignTimeResourceGenerator>False</AndroidUseManagedDesignTimeResourceGenerator>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Resources\**\*.cs" />
    <Compile Remove="Resources\**\*.cs" />
    <AndroidResource Include="Resources\**\*.xml" Generator="MSBuild:UpdateAndroidResources" />
    <LibraryProjectZip Include="Jars\*.aar" />
    <EmbeddedJar Include="Jars\*.jar" />
    <TransformFile Include="Transforms\*.xml" />
  </ItemGroup>

</Project>
